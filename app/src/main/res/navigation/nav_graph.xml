<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.example.animeapp.ui.main.AnimeFragment"
        android:label="anime_fragment">
        <action
            android:id="@+id/action_animeFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.animeapp.ui.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.animeapp.ui.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeDetailsFragment"
        android:name="com.example.animeapp.ui.animedetail.AnimeDetailsFragment"
        android:label="anime_details_fragment"
        tools:layout="@layout/anime_details_fragment" >
        <action
            android:id="@+id/action_animeDetailsFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
        <argument
            android:name="detailsArg"
            app:argType="com.example.animeapp.data.Details" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.animeapp.ui.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.animeapp.favorite.FavoriteFragment"
        android:label="FavoriteFragment" >
        <action
            android:id="@+id/action_favoriteFragment_to_favDetails"
            app:destination="@id/favDetails" />
    </fragment>
    <dialog
        android:id="@+id/favDetails"
        android:name="com.example.animeapp.FavDetails"
        android:label="fragment_item_list_dialog_list_dialog"
        tools:layout="@layout/fav_details" >
        <action
            android:id="@+id/action_favDetails_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <argument
            android:name="animeTitle"
            app:argType="string" />
        <argument
            android:name="animeRate"
            app:argType="string" />
        <argument
            android:name="animeEp"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/trendingAnimeFragment"
        android:name="com.example.animeapp.ui.main.TrendingAnimeFragment"
        android:label="TrendingAnimeFragment" >
        <action
            android:id="@+id/action_trendingAnimeFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.animeapp.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
</navigation>