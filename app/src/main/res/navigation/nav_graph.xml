<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.example.animeapp.ui.main.AnimeFragment"
        android:label="anime_fragment">
        <action
            android:id="@+id/action_animeFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.animeapp.ui.signup.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.animeapp.ui.signin.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeDetailsFragment"
        android:name="com.example.animeapp.ui.animedetail.AnimeDetailsFragment"
        android:label="anime_details_fragment"
        tools:layout="@layout/anime_details_fragment" >
        <action
            android:id="@+id/action_animeDetailsFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
        <argument
            android:name="detailsArg"
            app:argType="com.example.animeapp.data.Details" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.animeapp.ui.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_animeDetailsFragment"
            app:destination="@id/animeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.animeapp.favorite.FavoriteFragment"
        android:label="FavoriteFragment" />
</navigation>